<h1>Word game!</h1>
<h2>Here's your grid:</h2>
<h2> <%= @grid %> </h2>

<form action="/score">
  <label for="question">What's your best shot?</label>
  <input type="hidden" name="start_time" value="<%= Time.now.utc.strftime( "%H%M%S%L" ) %>">

  <input type="text" id="question" name="answer" placeholder="???">
  <input type="submit" value="Go on!">
  <input type="hidden" name="grid" value="<%= @grid %>">
</form>

